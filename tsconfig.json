{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "noEmit": true,
    "moduleResolution": "node",
    "allowJs": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "pretty": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictFunctionTypes": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@navigation/*": ["src/navigation/*"],
      "@screens/*": ["src/screens/*"],
      "@images/*": ["src/images/*"],
      "@types"
    }
  },
  "exclude": ["node_modules"]
}
